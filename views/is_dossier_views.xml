    <!-- is.dossier -->
    <record id="is_dossier_form" model="ir.ui.view">
        <field name="name">is.dossier.form</field>
        <field name="model">is.dossier</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="creation_contrat_action"
                        type="object"
                        string="Nouveau contrat"
                        groups="sales_team.group_sale_manager"
                    />
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="numaff"/>
                            <field name="adresse1"/>
                            <field name="adresse2"/>
                            <field name="codepostal"/>
                            <field name="lieu"/>
                            <field name="m_ouvrage_id"/>
                            <field name="m_oeuvre_id"/>
                            <field name="date"/>
                            <field name="montant_ope"/>
                            <field name="distance"/>
                            <field name="duree" widget="float_time"/>
                        </group>
                        <group>
                            <field name="nom" default_focus="1"/>
                            <field name="description_succinte"/>
                            <field name="description_complete"/>
                            <field name="numconcours"/>
                            <field name="surface"/>
                            <field name="service_executant"/>
                            <field name="num_marche"/>
                            <field name="site_internet"/>
                            <field name="nota"/>
                        </group>
                    </group>
                    <group string="Références">
                        <field name="referencee_ids" widget="many2many_tags"/>
                    </group>
                    <group string="Contrats">
                        <field name="contrat_ids" nolabel="1" readonly="1">
                            <tree default_order="name">
                                <button string="Contrat" name="acceder_contrat_action" type="object" icon="fa-search-plus"/>
                                <field name="name"/>
                                <field name="signe"/>
                                <field name="client_id"/>
                                <field name="description"/>
                                <field name="date"/>
                                <field name="refclient"/>
                                <field name="traitance_id"/>
                            </tree>
                        </field>
                    </group>

                    <group string="Adjudicataires">
                        <field name="adjudicataire_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="adjudicataire_id" required="1"/>
                                <field name="nomdulot"/>
                                <field name="montant" sum="total"/>
                                <field name="retenu"/>
                                <field name="notes"/>
                            </tree>
                        </field>
                    </group>

                    <group string="Notes">
                        <field name="note_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="date"/>
                                <field name="auteur"/>
                                <field name="titre"/>
                                <field name="texte_note"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
