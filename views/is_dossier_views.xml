    <!-- is.dossier.contrat -->
    <record id="is_dossier_contrat_form" model="ir.ui.view">
        <field name="name">is.dossier.contrat.form</field>
        <field name="model">is.dossier.contrat</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="dossier_id"/>
                        <field name="signe"/>
                        <field name="client_id"/>
                        <field name="description"/>
                        <field name="notes"/>
                        <field name="condreglement"/>
                        <field name="delaipaiement"/>
                        <field name="date"/>
                        <field name="refclient"/>
                        <field name="traitance_id"/>
                    </group>
                    <group string="Composition du contrat">
                        <field name="detail_ids" nolabel="1">
                            <tree>
                                <field name="numligne"/>
                                <field name="phase_id"/>
                                <field name="texte"/>
                                <field name="dateremise"/>
                                <field name="montant_ht" sum="Total"/>
                                <field name="avancement"/>
                                <field name="nota"/>
                                <field name="facturable"/>
                                <field name="a_facturer"/>
                                <field name="facture"/>
                                <field name="facture_le"/>
                            </tree>
                            <form>
                                <group>
                                    <group>
                                        <field name="numligne"/>
                                        <field name="phase_id" required="1"/>
                                        <field name="texte"    required="1"/>
                                        <field name="dateremise"/>
                                        <field name="avancement"/>
                                    </group>
                                    <group>
                                        <field name="nota"/>
                                        <field name="facturable"/>
                                        <field name="a_facturer"/>
                                        <field name="facture"/>
                                        <field name="facture_le"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="a">
                                        <field name="stxt1"/>
                                        <field name="montant1"/>
                                        <field name="codass1_id"/>
                                    </group>
                                    <group string="b">
                                        <field name="stxt2"/>
                                        <field name="montant2"/>
                                        <field name="codass2_id"/>
                                    </group>
                                    <group string="c">
                                        <field name="stxt3"/>
                                        <field name="montant3"/>
                                        <field name="codass3_id"/>
                                    </group>
                                    <group string="d">
                                        <field name="stxt4"/>
                                        <field name="montant4"/>
                                        <field name="codass4_id"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="montant_ht"/>
                                </group>

                            </form>
                        </field>
                    </group>
                    <group>
                        <field name="restant_ht"/>
                    </group>
                    <group string="Factures">
                        <field name="invoice_ids" nolabel="1">
                            <tree>
                                <button string="Facture" name="acceder_facture_action" type="object" icon="fa-search-plus"/>
                                <field name="number"/>
                                <field name="date_invoice"/>
                                <field name="partner_id"/>
                                <field name="amount_untaxed_invoice_signed" sum="Total"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
