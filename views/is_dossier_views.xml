<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- is.dossier -->
    <record id="is_dossier_form" model="ir.ui.view">
        <field name="name">is.dossier.form</field>
        <field name="model">is.dossier</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="creation_contrat_action"
                        type="object"
                        string="Nouveau contrat"
                    />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="numaff"/>
                            <field name="adresse1"/>
                            <field name="codepostal"/>
                            <field name="lieu"/>
                            <field name="m_ouvrage_id"/>
                            <field name="date"/>
                            <field name="montant_ope"/>
                            <field name="description_complete"/>
                            <field name="distance"/>
                            <field name="duree" widget="float_time"/>
                        </group>
                        <group>
                            <field name="nom"/>
                            <field name="description_succinte"/>
                            <field name="adresse2"/>
                            <field name="numconcours"/>
                            <field name="m_oeuvre_id"/>
                            <field name="surface"/>
                            <field name="site_internet"/>
                            <field name="nota"/>
                        </group>
                    </group>
                    <group string="Références">
                        <field name="referencee_ids" widget="many2many_tags"/>
                    </group>
                    <group string="Contrats">
                        <field name="contrat_ids" nolabel="1">
                            <tree>
                                <button string="Contrat" name="acceder_contrat_action" type="object" icon="fa-search-plus"/>
                                <field name="name"/>
                                <field name="signe"/>
                                <field name="client_id"/>
                                <field name="description"/>
                                <field name="date"/>
                                <field name="refclient"/>
                                <field name="traitance_id"/>

                            </tree>
                        </field>
                    </group>
                    <group string="Notes">
                        <field name="note_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="date"/>
                                <field name="auteur"/>
                                <field name="titre"/>
                                <field name="texte_note"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="is_dossier_tree" model="ir.ui.view">
        <field name="name">is.dossier.tree</field>
        <field name="model">is.dossier</field>
        <field name="arch" type="xml">
            <tree>
                <field name="numaff"/>
                <field name="nom"/>
                <field name="lieu"/>
                <field name="m_oeuvre_id"/>
                <field name="m_ouvrage_id"/>
                <field name="montant_ope"/>
                <field name="surface"/>
                <field name="distance"/>
                <field name="duree" widget="float_time"/>
            </tree>
        </field>
    </record>
    <record id="is_dossier_search" model="ir.ui.view">
        <field name="name">is.dossier.search</field>
        <field name="model">is.dossier</field>
        <field name="arch" type="xml">
            <search>
                <field name="numaff"/>
                <field name="nom"/>
                <field name="lieu"/>
                <field name="m_ouvrage_id"/>
                <field name="m_oeuvre_id"/>
           </search>
        </field>
    </record>
    <record id="is_dossier_pivot" model="ir.ui.view">
        <field name="name">is_dossier_pivot</field>
        <field name="model">is.dossier</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="m_ouvrage_id" type="row"/>
                <field name="montant_ope"  type="measure"/>
            </pivot>
        </field>
    </record>
    <record id="is_dossier_graph" model="ir.ui.view">
        <field name="name">is_dossier_graph</field>
        <field name="model">is.dossier</field>
        <field name="arch" type="xml">
            <graph type="bar" orientation="vertical" stacked="False">
                <field name="m_ouvrage_id" type="row"/>
                <field name="montant_ope"  type="measure"/>
            </graph>
        </field>
    </record>
    <record  id="is_dossier_action" model="ir.actions.act_window">
        <field name="name">Dossier</field>
        <field name="res_model">is.dossier</field>
        <field name="view_type">form</field>
        <field name="limit">200</field>
        <field name="view_mode">tree,form,pivot,graph</field>
    </record>


    <!-- is.dossier.reference -->
    <record id="is_dossier_reference_form" model="ir.ui.view">
        <field name="name">is.dossier.reference.form</field>
        <field name="model">is.dossier.reference</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="is_dossier_reference_tree" model="ir.ui.view">
        <field name="name">is.dossier.reference.tree</field>
        <field name="model">is.dossier.reference</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="is_dossier_reference_search" model="ir.ui.view">
        <field name="name">is.dossier.reference.search</field>
        <field name="model">is.dossier.reference</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
           </search>
        </field>
    </record>
    <record  id="is_dossier_reference_action" model="ir.actions.act_window">
        <field name="name">Référence Dossier</field>
        <field name="res_model">is.dossier.reference</field>
        <field name="view_type">form</field>
        <field name="limit">200</field>
        <field name="view_mode">tree,form</field>
    </record>



    <!-- is.dossier.contrat -->
    <record id="is_dossier_contrat_form" model="ir.ui.view">
        <field name="name">is.dossier.contrat.form</field>
        <field name="model">is.dossier.contrat</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="signe"/>
                        <field name="dossier_id"/>
                        <field name="client_id"/>
                        <field name="description"/>
                        <field name="notes"/>
                        <field name="condreglement"/>
                        <field name="delaipaiement"/>
                        <field name="date"/>
                        <field name="refclient"/>
                        <field name="traitance_id"/>
                    </group>

                    <group string="Factures">
                        <field name="invoice_ids" nolabel="1">
                            <tree>
                                <button string="Facture" name="acceder_facture_action" type="object" icon="fa-search-plus"/>
                                <field name="number"/>
                                <field name="date_invoice"/>
                                <field name="partner_id"/>
                                <field name="amount_untaxed_invoice_signed" sum="Total"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="is_dossier_contrat_tree" model="ir.ui.view">
        <field name="name">is.dossier.contrat.tree</field>
        <field name="model">is.dossier.contrat</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="signe"/>
                <field name="dossier_id"/>
                <field name="client_id"/>
                <field name="description"/>
                <field name="date"/>
                <field name="refclient"/>
                <field name="traitance_id"/>
            </tree>
        </field>
    </record>
    <record id="is_dossier_contrat_search" model="ir.ui.view">
        <field name="name">is.dossier.contrat.search</field>
        <field name="model">is.dossier.contrat</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="signe"/>
                <field name="dossier_id"/>
                <field name="client_id"/>
                <field name="description"/>
                <field name="date"/>
                <field name="refclient"/>
                <field name="traitance_id"/>
           </search>
        </field>
    </record>
    <record  id="is_dossier_contrat_action" model="ir.actions.act_window">
        <field name="name">Contrat</field>
        <field name="res_model">is.dossier.contrat</field>
        <field name="view_type">form</field>
        <field name="limit">200</field>
        <field name="view_mode">tree,form</field>
    </record>


    <!-- is.dossier.contrat.traitance -->
    <record id="is_dossier_contrat_traitance_form" model="ir.ui.view">
        <field name="name">is.dossier.contrat.traitance.form</field>
        <field name="model">is.dossier.contrat.traitance</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="is_dossier_contrat_traitance_tree" model="ir.ui.view">
        <field name="name">is.dossier.contrat.traitance.tree</field>
        <field name="model">is.dossier.contrat.traitance</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>
    <record id="is_dossier_contrat_traitance_search" model="ir.ui.view">
        <field name="name">is.dossier.contrat.traitance.search</field>
        <field name="model">is.dossier.contrat.traitance</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
           </search>
        </field>
    </record>
    <record  id="is_dossier_contrat_traitance_action" model="ir.actions.act_window">
        <field name="name">Traitance contrat</field>
        <field name="res_model">is.dossier.contrat.traitance</field>
        <field name="view_type">form</field>
        <field name="limit">200</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>
