<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- is.dossier -->
    <record id="is_dossier_form" model="ir.ui.view">
        <field name="name">is.dossier.form</field>
        <field name="model">is.dossier</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="creation_contrat_action"
                        type="object"
                        string="Nouveau contrat"
                    />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="numaff"/>
                            <field name="adresse1"/>
                            <field name="codepostal"/>
                            <field name="lieu"/>
                            <field name="m_ouvrage_id"/>
                            <field name="date"/>
                            <field name="montant_ope"/>
                            <field name="description_complete"/>
                            <field name="distance"/>
                            <field name="duree" widget="float_time"/>
                        </group>
                        <group>
                            <field name="nom"/>
                            <field name="description_succinte"/>
                            <field name="adresse2"/>
                            <field name="numconcours"/>
                            <field name="m_oeuvre_id"/>
                            <field name="surface"/>
                            <field name="site_internet"/>
                            <field name="nota"/>
                        </group>
                    </group>
                    <group string="Références">
                        <field name="referencee_ids" widget="many2many_tags"/>
                    </group>
                    <group string="Contrats">
                        <field name="contrat_ids" nolabel="1">
                            <tree>
                                <button string="Contrat" name="acceder_contrat_action" type="object" icon="fa-search-plus"/>
                                <field name="name"/>
                                <field name="signe"/>
                                <field name="client_id"/>
                                <field name="description"/>
                                <field name="date"/>
                                <field name="refclient"/>
                                <field name="traitance_id"/>

                            </tree>
                        </field>
                    </group>
                    <group string="Notes">
                        <field name="note_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="date"/>
                                <field name="auteur"/>
                                <field name="titre"/>
                                <field name="texte_note"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="is_dossier_tree" model="ir.ui.view">
        <field name="name">is.dossier.tree</field>
        <field name="model">is.dossier</field>
        <field name="arch" type="xml">
            <tree>
                <field name="numaff"/>
                <field name="nom"/>
                <field name="lieu"/>
                <field name="m_ouvrage_id"/>
                <field name="m_oeuvre_id"/>
                <field name="montant_ope"/>
                <field name="surface"/>
