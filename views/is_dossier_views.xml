    <record id="is_dossier_contrat_form" model="ir.ui.view">
        <field name="name">is.dossier.contrat.form</field>
        <field name="model">is.dossier.contrat</field>
        <field name="arch" type="xml">
            <form>
                <!--
                <header>
                    <button
                        name="generer_facture_action"
                        type="object"
                        string="Générer facture"
                    />
                </header>
                -->
                <sheet>
                    <style>
                        .o_form_view .o_form_sheet_bg > .o_form_sheet{
                            max-width: 1800px;
                        }
                        .o_form_label{
                            white-space: nowrap;
                        }
                    </style>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="dossier_id"/>
                            <field name="description" default_focus="1"/>
                            <field name="signe"/>
                            <field name="client_id" required="1"/>
                            <field name="tva_id"    required="1"/>
                            <field name="notes"/>
                        </group>
                        <group>
                            <field name="condreglement"/>
                            <field name="delaipaiement"/>
                            <field name="date"/>
                            <field name="refclient"/>
                            <field name="num_marche"/>
                            <field name="code_service"/>
                            <field name="traitance_id"/>
                            <!-- <field name="anomalie"/> -->
                        </group>
                    </group>
                    <group string="Composition du contrat">
                        <field name="detail_ids" nolabel="1" context="{'dossier_id': active_id,'test':id}">
                            <tree decoration-info="commentaire == True">
                                <field name="numligne" widget="handle"/>
                                <field name="commentaire" invisible="1"/>
                                <field name="phase_id"/>
                                <field name="texte"/>
                                <field name="montant_ht" sum="Total"/>
                                <field name="avancement"/>
                                <field name="nota"/>
                                <field name="facturable"/>
                                <field name="a_facturer"/>
                                <!-- <field name="facture"/> -->
                                <field name="facture_recursif"/>
                                <field name="montant_facture"    sum="Total"/>
                                <field name="montant_a_facturer" sum="Total"/>
                                <!--<field name="facture_le" readonly="1"/>-->
                            </tree>
                            <form>
                                <group>
                                    <group>
                                        <field name="numligne" readonly="1"/>
                                        <field name="commentaire"/>
                                        <field 
                                            name="phase_id" 
                                            attrs="{'invisible': [('commentaire','==', True)], 'required': [('commentaire','==', False)]}"
                                        />
                                        <field name="texte"    required="1"/>
                                        <field name="avancement" attrs="{'invisible': [('commentaire','==', True)]}"/>
                                    </group>
                                    <group  attrs="{'invisible': [('commentaire','==', True)]}">
                                        <field name="nota"/>
                                        <field name="facturable"/>
                                        <field name="a_facturer" attrs="{'invisible': [('facturable','!=', 'oui')]}"/>
                                        <field name="facture"    attrs="{'invisible': [('facturable','!=', 'oui')]}" readonly="1"/>
                                        <field name="facture_le" attrs="{'invisible': [('facturable','!=', 'oui')]}" readonly="1"/>
                                    </group>
                                </group>
                                <group  attrs="{'invisible': [('commentaire','==', True)]}">
                                    <group string="a">
                                        <field name="stxt1"/>
                                        <field name="montant1"/>
                                        <field name="codass1_id"/>
                                    </group>
                                    <group string="b">
                                        <field name="stxt2"/>
                                        <field name="montant2"/>
                                        <field name="codass2_id"/>
                                    </group>
                                    <group string="c">
                                        <field name="stxt3"/>
                                        <field name="montant3"/>
                                        <field name="codass3_id"/>
                                    </group>
                                    <group string="d">
                                        <field name="stxt4"/>
                                        <field name="montant4"/>
                                        <field name="codass4_id"/>
                                    </group>
                                </group>
                                <group attrs="{'invisible': [('commentaire','==', True)]}">
                                    <field name="montant_ht"/>
                                </group>

                            </form>
                        </field>
                    </group>
                    <group>
                        <field name="restant_ht"/>
                        <field name="facturable_ht"/>
                    </group>
                    <group string="Factures">
                        <button
                            name="generer_facture_action"
                            type="object"
                            string="Générer nouvelle facture"
                        />
                    </group>
                    <group>
                        <field name="invoice_ids" nolabel="1">
                            <tree>
                                <button string="Facture" name="acceder_facture_action" type="object" icon="fa-search-plus"/>
                                <field name="number"/>
                                <field name="date_invoice"/>
                                <field name="date_due"/>
                                <field name="amount_untaxed_invoice_signed" sum="Total" string="Montant HT"/>
                                <field name="is_montant_revision"           sum="Total"/>
                                <field name="is_montant_hors_revision"      sum="Total"/>
                                <field name="state" string="État"/>
                            </tree>
                        </field>
                    </group>
                    <group>
                        <field name="nb_factures"/>
                    </group>
                    <group string="Heures">
                        <field name="heure_ids" nolabel="1">
                            <tree>
                                <field name="date_travaillee"/>
                                <field name="user_id"/>
                                <field name="login"/>
                                <field name="nb_heures" sum="Total"/>
                                <field name="note"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
